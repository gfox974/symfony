{% extends 'base.html.twig' %}

{% block title %}Lecture de l'article{% endblock %}

{% block body %}
<div class="card border-success mb-3" style="max-width: 20rem;">
  <div class="card-header">Article {{ article.id }} post√© par {{ article.auteur }} le {{ article.creeLe | date("d/m/y") }}</div>
  <div class="card-body">
    <h4 class="card-title">{{ article.titre }}</h4>
    <p class="card-text">{{ article.corps }}</p>
  </div>
</div>
<button><a href="{{ path("blog") }}"> Retour </a></button>
<button><a href="{{ path("editer", {'id': article.id}) }}"> Modifier </a></button>
{% endblock %}
